<div class="row">
	<div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4">
		<h2>Registracija</h2>

		<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

		<div>
		<%= f.email_field :email, autofocus: true, placeholder: 'Vpišite naslov vaše elektronske pošte...' %></div>

		<div>
			<%= f.password_field :password, autocomplete: "off", label: 'Geslo', placeholder: 'Vpišite vaše geslo...'%></div>

		<div>
			<%= f.password_field :password_confirmation, autocomplete: "off", label: 'Potrditev gesla', placeholder: 'Ponovno vpišite vaše geslo...' %></div>

		<div><%= f.submit "Vpiši se", class: 'btn btn-primary btn-lg' %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>
