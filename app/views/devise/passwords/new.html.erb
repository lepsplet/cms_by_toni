<div class="row">
	<div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4">
		<h2>Pozabili geslo?</h2>

		<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		<%= devise_error_messages! %>

		<div>
		<%= f.email_field :email, autofocus: true, placeholder: 'Vpišite naslov vaše elektronske pošte...' %></div>

		<div><%= f.submit "Pošljite mi navodila za obnovo gesla", class: 'btn btn-primary btn-lg' %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>

