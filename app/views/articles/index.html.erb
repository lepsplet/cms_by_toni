<h2 class="text-center">Vsi članki <%= @subcategory.name %></h2>
<% if @articles.empty? %>
	<p class="text-center">Ni nobenega članka. Bodi Kralj in napiši kakšnega.</p>
<% else %>
	<% @articles.each do |item| %>
		<div>
			 <%= link_to item.name, edit_article_path(item), class: 'btn btn-success btn-lg' %>
			<%= link_to 'izbriši', article_path(item), method: :delete, data: { confirm: "Ali ste prepričani, da želite izbrisati članek?" }, class: 'btn btn-default' %> </div>
	<% end %>
<% end %><br>

<%= link_to 'Napiši nov članek', { action: :new, id: @subcategory.id }, class: 'btn btn-primary btn-lg' %><br>
<%= link_to 'Nazaj', { controller: :subcategories, action: :index, id: @subcategory.category_id }, class: 'btn btn-default' %>
