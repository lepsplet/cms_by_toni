<h2 class="text-center">Nov članek</h2>

<%= bootstrap_form_for @article, url: { action: :create, id: @subcategory.id} do |f| %>

	<%= render 'error_messages' %>

	<div><%= f.text_field :name, label: 'Naslov:', placeholder: 'vnesite naslov članka...', autofocus: true %></div>

	<div><%= f.text_area :body, label: 'Besedilo:', placeholder: 'napišite članek...', rows: 25 %></div>
	<div><%= f.submit 'shrani', class: 'btn btn-primary btn-lg' %></div>

	<%= link_to 'nazaj', { action: :index, id: @subcategory.id }, class: 'btn btn-default' %>
<% end %>

