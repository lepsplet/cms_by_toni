<h2>Vnesi novo podkategorijo</h2>

<%= bootstrap_form_for @subcategory, url: { action: :create, id: @category.id} do |f| %>

	<%= render 'error_messages' %>

	<div><%= f.text_field :name, label: 'Ime:', placeholder: 'Vnesite ime nove podkategorije...', autofocus: true %></div>
	<div><%= f.submit 'shrani', class: 'btn btn-primary btn-lg' %></div>
<% end %>
<%= link_to 'Nazaj', { action: :index, id: @category.id }, class: 'btn btn-default' %>
