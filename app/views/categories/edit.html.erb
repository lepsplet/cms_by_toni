<h2 class="text-center">Spremeni naslov kategorije</h2>
<%= bootstrap_form_for @category do |f| %>

	<%= render 'error_messages' %>

	<div><%= f.text_field :name, label: 'Ime:', autofocus: true %></div>
	<div><%= f.submit 'shrani spremembe', class: 'btn btn-primary btn-lg'  %></div>
<% end %>

<%= link_to 'nazaj', categories_path, class: 'btn btn-default' %>
