<h2 class="text-center">Vnesi novo kategorijo</h2>
<%= bootstrap_form_for @category do |f| %>

	<%= render 'error_messages' %>

	<div><%= f.text_field :name, label: 'Ime:', placeholder: 'Vnesite ime kategorije...', autofocus: true %></div>
	<div><%= f.submit 'Shrani', class: 'btn btn-primary btn-lg' %></div>
<% end %>

<%= link_to 'nazaj', categories_path, class: 'btn btn-default'  %> 
