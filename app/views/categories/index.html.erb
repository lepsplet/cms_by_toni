<h2 class="text-center">Vse kategorije</h2>

<% @categories.each do |category| %>
	<div>
		<%= link_to category.name, { controller: :subcategories, action: :index, id: category.id }, class: 'btn btn-success btn-lg' %>
		<%= link_to 'uredi', edit_category_path(category), class: 'btn btn-default' %>
		<%= link_to 'Izbriši', category_path(category), method: :delete, data: { confirm: "Ali ste prepričani, da želite izbrisati kategorijo?" }, class: 'btn btn-default' %>
	</div>
<% end %>
<br>
<div><%= link_to 'Dodaj novo kategorijo', new_category_path, class: 'btn btn-primary'%></div>
